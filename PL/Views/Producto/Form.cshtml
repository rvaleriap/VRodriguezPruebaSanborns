@model ML.Producto
@{
    ViewData["Title"] = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Productos</h1>


<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Form", "Producto", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
        <div class="form-horizontal">
            <div class=" form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Sku, new { @class = "visually-hidden" })
                    @Html.TextBoxFor(model => model.Sku, new { @class = "visually-hidden" })
                    @Html.ValidationMessageFor(model => model.Sku)
                    @*hidden*@
                </div>
            </div>
            <div class="row">
                <div class=" form-group">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.Descripcion)
                        @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control", @id = "txtNombre" })
                        @Html.ValidationMessageFor(model => model.Descripcion)
                    </div>
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(model => model.PrecioVenta)
                    @Html.TextBoxFor(model => model.PrecioVenta, new { @class = "form-control", @id = "txtNombre" })
                    @Html.ValidationMessageFor(model => model.PrecioVenta)
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Descuento)
                    @Html.TextBoxFor(model => model.Descuento, new { @class = "form-control", @id = "txtNombre" })
                    @Html.ValidationMessageFor(model => model.Descuento)
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Impuesto)
                    @Html.TextBoxFor(model => model.Impuesto, new { @class = "form-control", @id = "txtNombre" })
                    @Html.ValidationMessageFor(model => model.Impuesto)
                </div>
            </div>
     
       </div>


            <div class="form-group">
                <div class="col-md-3">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                    @Html.ActionLink("Regresar", "GetAll", "Producto", htmlAttributes: new { @class = "btn btn-danger" })
                </div>
            </div>
  
                }
    </div>
</div>

